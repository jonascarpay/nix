{
  "codeLens": {
    "enable": true,
  },
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    },
    "rust": {
      "command": "rust-analyzer",
      "rootPatterns": [ "Cargo.toml" ],
      "filetypes": ["rust"],
    },
  },
}
